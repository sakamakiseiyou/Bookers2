<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/new', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
     　
     　<h2>Book detail</h2>
     <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_image %><br>
            <%= @books.user.name %>
            <%end%>
          </td>
          <td>
            <%= link_to @books.title, book_path(@books.id) %>
          </td>
          <td>
           <%= @books.body %>
          </td>
          <td>
             <% if @books.user == current_user %>
            <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %>
          <% end %>
          </td>
          <td>
             <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
         <% end %>
          </td>
        </tr>


    </tbody>
    </table>
    </div>
  </div>
</div>
